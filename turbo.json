{
	"$schema": "https://turborepo.org/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"inputs": ["src/**/*", "tsconfig.json"]
		},
		"dev": {
			"cache": false
		}
	},
	"globalDependencies": [
		"tsconfig.json",
		"tsconfig.sdk.types.json",
		"tsconfig.base.json"
	]
}
