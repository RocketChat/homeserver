{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"noEmit": false,
		"esModuleInterop": true,
		"allowImportingTsExtensions": false,
		"isolatedModules": true,
		"noResolve": false,
		"strict": true,
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["ESNext"],

		// Path mapping for dependencies
		"baseUrl": ".",
		"paths": {
			"@hs/core": ["../core/dist"],
			"@hs/core/*": ["../core/dist/*"],
			"@hs/crypto": ["../crypto/dist"],
			"@hs/crypto/*": ["../crypto/dist/*"],
			"@hs/room": ["../room/dist"],
			"@hs/room/*": ["../room/dist/*"],
			"@hs/federation-sdk": ["../federation-sdk/dist"],
			"@hs/federation-sdk/*": ["../federation-sdk/dist/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"],
	"references": []
}
