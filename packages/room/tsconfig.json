{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"noEmit": false,
		"esModuleInterop": true,
		"allowImportingTsExtensions": false,
		"verbatimModuleSyntax": false,
		"strict": true,
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["ESNext"],

		// Path mapping for dependencies - use src for development
		"baseUrl": ".",
		"paths": {}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
