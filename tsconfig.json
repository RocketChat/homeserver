{
	"compilerOptions": {
		// Enable latest features
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"allowJs": true,

		// Bundler mode
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,

		// Some stricter flags (disabled by default)
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,

		// For NestJS
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,

		// Path mapping for monorepo development
		"baseUrl": ".",
		"paths": {
			"@hs/core": ["packages/core/src"],
			"@hs/core/*": ["packages/core/src/*"],
			"@hs/federation-sdk": ["packages/federation-sdk/src"],
			"@hs/federation-sdk/*": ["packages/federation-sdk/src/*"],
			"@hs/homeserver": ["packages/homeserver/src"],
			"@hs/homeserver/*": ["packages/homeserver/src/*"],
			"@hs/room": ["packages/room/src"],
			"@hs/room/*": ["packages/room/src/*"],
			"@hs/crypto": ["packages/crypto/src"],
			"@hs/crypto/*": ["packages/crypto/src/*"]
		}
	},
	"include": ["index.ts", "test-setup.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"packages/**/*",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}
